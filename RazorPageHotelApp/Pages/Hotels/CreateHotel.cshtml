@page
@model RazorPageHotelApp.Pages.Hotels.CreateHotelModel
@{
}
<h4>Create Hotel</h4>
<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.NewHotel.HotelNr" class="form-control" />
        <span asp-validation-for="@Model.NewHotel.HotelNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewHotel.Navn" class="control-label">Name</label>
        <input asp-for="@Model.NewHotel.Navn" class="form-control" />
        <span asp-validation-for="@Model.NewHotel.Navn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewHotel.Adresse" class="control-label">Address</label>
        <input asp-for="@Model.NewHotel.Adresse" class="form-control" />
        <span asp-validation-for="@Model.NewHotel.Adresse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="button btn btn-dark" />
    </div>
</form>
@if (Model.done)
{
    <h4 style="color:green">The Hotel has been created</h4>
    <a class="button btn btn-dark" asp-page="GetAllHotels">Return to all Hotels</a>
}