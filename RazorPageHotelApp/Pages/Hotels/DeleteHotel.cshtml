@page
@model RazorPageHotelApp.Pages.Hotels.DeleteHotelModel
@{
}
@if (Model.ErrorMessage != null && Model.ErrorMessage.Length > 0)
{
    <p class="alert-danger">@Model.ErrorMessage</p>
}
<form method="post">
    <div class="form-group">
        <input asp-for="@Model.Hotel.HotelNr" readonly="readonly" class="form-control" />
        <span asp-validation-for="@Model.Hotel.HotelNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Navn" class="control-label">Name</label>
        <input asp-for="@Model.Hotel.Navn" readonly="readonly" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Navn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Hotel.Adresse" class="control-label">Address</label>
        <input asp-for="@Model.Hotel.Adresse" readonly="readonly" class="form-control" />
        <span asp-validation-for="@Model.Hotel.Adresse" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-page-handler="Confirm" type="submit" value="Delete" class="button btn btn-danger" asp-route-hNr="@Model.Hotel.HotelNr" />
        <a class="button btn btn-dark" asp-page="GetAllHotels">Return to all hotels</a>
    </div>
</form>