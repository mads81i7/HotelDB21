@page
@model RazorPageHotelApp.Pages.Rooms.EditRoomModel
@{
}
<h4>Create Room</h4>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Room.HotelNr" class="control-label">Hotel number</label>
        <input asp-for="@Model.Room.HotelNr" readonly="readonly" class="form-control" />
        <span asp-validation-for="@Model.Room.HotelNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Room.RoomNr" class="form-control" />
        <span asp-validation-for="@Model.Room.RoomNr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Room.Pris" class="control-label">Price</label>
        <input type="number" asp-for="@Model.Room.Pris" class="form-control" />
        <span asp-validation-for="@Model.Room.Pris" class="text-danger"></span>
    </div>
    <div class="form-group">
        @*<label asp-for="@Model.NewRoom.Types" class="control-label">Type (S, F or D)</label>
            <input asp-for="@Model.NewRoom.Types" class="form-control" />
            <span asp-validation-for="@Model.NewRoom.Types" class="text-danger"></span>*@
        @*@foreach (var Type in Model.RoomTypes)
            {
                <input type="radio" asp-for="RoomType" value="@Type" />@Type<br />
            }*@
        @for (int i = 0; i < Model.RoomTypes.Length; i++)
        {
            <input type="radio" asp-for="@Model.Room.Types" value="@Model.RoomTypes[i]" />@Model.TypeNames[i]<br />
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="button btn btn-dark" asp-route-hNr="@Model.Room.HotelNr" />
    </div>
</form>
@if (Model.done)
{
    <h4 style="color:green">The Room has been created</h4>
    <a class="button btn btn-dark" asp-page="GetAllRooms" asp-route-hNr="@Model.Room.HotelNr">Return to all Rooms in Hotel</a>
}